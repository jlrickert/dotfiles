#!/usr/bin/env bash

API=openai
MODEL=gpt-4.1-mini
# API=google
# MODEL=gemini-2.5-flash

PROJECT_DIR="$(git rev-parse --show-toplevel 2>/dev/null || pwd)"
CONTEXT_SCRIPT="${PROJECT_DIR}/knut-context"

cd "$(dirname "${CONTEXT_SCRIPT}")" &>/dev/null || exit

# ---- Piped content ----
PIPED_CONTENT="---

Piped content:

\`\`\`\`\`\`
\`\`\`\`\`\`
"
if [ ! -t 0 ]; then
	PIPED_CONTENT="---

Piped content:

\`\`\`\`\`\`
$(cat -)
\`\`\`\`\`\`

"
fi

# ---- Context ----
CONTEXT="---

Additional context:

\`\`\`\`\`\`\`\`\`yaml
pwd: $(pwd)
dns:
  jared: $(dump-ip vpn.jlrickert.me)
\`\`\`\`\`\`\`\`\`

"
if [ -x "${CONTEXT_SCRIPT}" ]; then
	CONTEXT="---
Additional context:

\`\`\`\`\`\`\`\`\`\`
$("${CONTEXT_SCRIPT}")
\`\`\`\`\`\`\`\`\`\`
"

elif [ -f "${CONTEXT_SCRIPT}" ]; then
	echo "Warning: '${CONTEXT_SCRIPT}' exists but is not executable." >&2
fi

# If something is being piped in, generate the content and then append the piped input
(
	echo "${CONTEXT}"
	echo "${PIPED_CONTENT}"
	echo
	echo "---
Gitdiff:

\`\`\`\`\`\`\`\`\`\`\`\`\`\`\`\`\`\`gitdiff
$(git diff --cached)
\`\`\`\`\`\`\`\`\`\`\`\`\`\`\`\`\`\`
"
	echo
) | mods --raw \
	--role "git-commenter" \
	--api "${API}" \
	--model "${MODEL}" \
	--temp 0.3 \
	--topp 0.85 \
	--topk 20 \
	"$@"
